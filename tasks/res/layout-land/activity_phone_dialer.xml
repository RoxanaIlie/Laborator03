<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="50dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ro.pub.cs.systems.eim.lab03.phonedialer.PhoneDialerActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:orientation="vertical" >

	    <EditText
	        android:id="@+id/editText1"
	        android:layout_width="255dp"
	        android:layout_height="wrap_content"

	        android:clickable="false"
	        android:cursorVisible="false"
	        android:ems="10"
	        android:focusable="false"
	        android:focusableInTouchMode="false"
	        android:inputType="phone"
	        android:maxLength="10" >
	
	        <requestFocus />
	    </EditText>
	    
	    <GridLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:rowCount="3"
	        android:columnCount="6" >
	        
	        <Button
		        android:id="@+id/button1"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/unu" 
		        android:layout_row="0"
		        android:layout_column="0"/>

	        <Button
	            android:id="@+id/button2"
	            android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
	            android:layout_gravity="center_horizontal|top"
	            android:text="@string/doi" 
	            android:layout_row="0"
	            android:layout_column="1" />
	        
	        <Button
		        android:id="@+id/button3"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/trei" 
		        android:layout_row="0"
	            android:layout_column="2" />
		
		    <Button
		        android:id="@+id/button4"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/patru"
		        android:layout_row="0"
	            android:layout_column="3"  />
		
		    <Button
		        android:id="@+id/button5"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/cinci" 
		        android:layout_row="0"
	            android:layout_column="4"  />
		
		    <Button
		        android:id="@+id/button6"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/sase"
		        android:layout_row="1"
	            android:layout_column="0"  />
		
		    <Button
		        android:id="@+id/button7"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/sapte"
		        android:layout_row="1"
	            android:layout_column="1"  />
		
		    <Button
		        android:id="@+id/button8"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/opt" 
		        android:layout_row="1"
	            android:layout_column="2"  />
		
		    <Button
		        android:id="@+id/button9"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/noua"
		        android:layout_row="1"
	            android:layout_column="3"  />
		    
		    <Button
		        android:id="@+id/button10"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/stea"
		        android:layout_row="2"
	            android:layout_column="1" />
		
		    <Button
		        android:id="@+id/button11"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/zero" 
		        android:layout_row="1"
	            android:layout_column="4" />
		
		    <Button
		        android:id="@+id/button12"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/diez"
		        android:layout_row="2"
	            android:layout_column="3" />

		    <ImageButton
		        android:id="@+id/imageButton1"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_row="2"
		        android:layout_column="2"
		        android:contentDescription="@string/backspace"
		        android:src="@drawable/backspace" />
		    
		     <ImageButton
		        android:id="@+id/imageButton2"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_row="2"
		        android:layout_column="0"
		        android:contentDescription="@string/call"
		        android:src="@drawable/call" />
		
		    <ImageButton
		        android:id="@+id/imageButton3"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_row="2"
		        android:layout_column="4"
		        android:contentDescription="@string/hangup"
		        android:src="@drawable/hangup" />
	        
	    </GridLayout>
	    
	</LinearLayout>


	
</RelativeLayout>